{
  "name": "jest-canvas-mock",
  "version": "2.2.0",
  "description": "Mock a canvas in your jest tests.",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "jest --no-cache",
    "build": "babel src --out-dir lib",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prepare": "npm run build"
  },
  "dependencies": {
    "cssfontparser": "^1.2.1",
    "validate-color": "^1.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-version": "^0.2.3",
    "coveralls": "^3.0.8",
    "husky": "^3.1.0",
    "jest": "^24.9.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test && npm run build"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/classes/**/*.js",
      "src/mock/**/*.js"
    ],
    "setupFiles": [
      "./src/index.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hustcc/jest-canvas-mock.git"
  },
  "keywords": [
    "mock",
    "jest",
    "jest-mock",
    "echarts",
    "canvas",
    "test",
    "unit"
  ],
  "author": "hustcc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hustcc/jest-canvas-mock/issues"
  },
  "homepage": "https://github.com/hustcc/jest-canvas-mock#readme"
}
